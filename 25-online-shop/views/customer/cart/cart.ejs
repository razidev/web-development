<%- include('../../shared/includes/head', { pageTitle: 'Your Cart'}) %>
<link rel="stylesheet" href="/styles/cart.css">
<script src="/scripts/cart-item.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Your Cart</h1>
        <ul id="cart-items">
            <% for (const item of locals.cart.items ) { %>
                <li>
                    <%- include('includes/cart-item', { item }) %>
                </li>
            <% } %>
        </ul>
        <div id="cart-total">
            <p>Total: Rp <span id="cart-total-price"><%= locals.cart.totalPrice.toFixed(2) %></span></p>
            <button class="btn">Buy Products</button>
        </div>
    </main>
<%- include('../../shared/includes/footer') %>